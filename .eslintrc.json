{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": ["plugin:@typescript-eslint/recommended"],
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "rules": {
        "no-console": "off",
        "indent": [
            "error", 
            4
        ],
        "linebreak-style": "off",
        "quotes": "off",
        "semi": [
            "error",
            "always"
        ]
    }
}